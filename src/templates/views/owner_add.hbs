  <form method="post" action="/owner_add">
    <div class="card w-75">
      <div class="card-body">
        <br>
        <p style="margin-left: 140px; color: black;">* ALL FIELDS ARE REQUIRED</p>
        <div class="row">
          <div class="col">
            <h4 class="card-title mt-4 " style="font-family: poppins; color: white; margin-left:140px;">Owner
              Name*</h4>
            <div class="form-group">
              <input type="text" class="form-control" id="name"
                style="width: 600px; height: 50px; font-size:25px;margin-left:130px;" autocomplete="off" name="name">
            </div>
          </div>
          <div class="col">
            <h4 class="card-title mt-4 " style="font-family: poppins; color: white; margin-left:10px;">Contact Number*
            </h4>
            <div class="form-group">
              <input type="text" class="form-control" id="contact"
                style="width: 600px; height: 50px; font-size:25px;margin-left:1px;" autocomplete="off" name="contact">
            </div>
          </div>
          <div class="row">
            <div class="col">
              <h4 class="card-title mt-4 " style="font-family: poppins; color: white; margin-left:140px;">House
                Number*</h4>
              <div class="form-group">
                <input type="text" class="form-control" id="buildingno"
                  style="width: 600px; height: 50px; font-size:25px;margin-left:130px;" autocomplete="off"
                  name="buildingno">
              </div>
            </div>
            <div class="col">
              <h4 class="card-title mt-4 " style="font-family: poppins; color: white; margin-left:20px;">Street
                name/number*</h4>
              <div class="form-group">
                <input type="text" class="form-control" id="street"
                  style="width: 600px; height: 50px; font-size:25px;margin-left:15px;" autocomplete="off" name="street">
              </div>
            </div>
            <div class="row">
              <div class="col">
                <h4 class="card-title mt-4 px-2" style="font-family: poppins; color: white; margin-left:130px;">Sub
                  Locality
                </h4>
                <div class="form-group">
                  <input type="text" class="form-control" id="slocality"
                    style="width: 600px; height: 50px; font-size:25px;margin-left:130px;" autocomplete="off"
                    name="slocality">
                </div>
              </div>
              <div class="col">
                <h4 class="card-title mt-4 px-2" style="font-family: poppins; color: white; margin-left:30px;">
                  Locality*
                </h4>
                <div class="form-group">
                  <input type="text" class="form-control" id="locality"
                    style="width: 600px; height: 50px; font-size:25px;margin-left:30px;" autocomplete="off"
                    name="locality">
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <h4 class="card-title mt-3 px-2" style="font-family: poppins; color: white;margin-left:130px;">
                    City*
                  </h4>
                  <div class="form-group">
                    <input type="text" class="form-control" id="city"
                      style="width: 600px; height: 50px; font-size:25px;margin-left:130px;" autocomplete="off"
                      name="city">
                  </div>
                </div>
                <div class="col">
                  <h4 class="card-title mt-3 px-2" style="font-family: poppins; color: white; margin-left:40px;">
                    State*
                  </h4>
                  <div class="form-group">
                    <input type="text" class="form-control" id="state"
                      style="width: 600px; height: 50px; font-size:25px;margin-left:40px;" autocomplete="off"
                      name="state">
                  </div>
                </div>

              </div>
              <div class="row">
                <div class="col">
                  <h4 class="card-title mt-3 px-2" style="font-family: poppins; color: white;margin-left:130px;">
                    Number of
                    flats*</h4>
                  <div class="form-group">
                    <input type="number" class="form-control" id="flats"
                      style="width: 600px; height: 50px; font-size:25px;margin-left:130px;" autocomplete="off"
                      name="flats">
                  </div>
                </div>
                <div class="col">
                  <h4 class="card-title mt-4 px-2" style="font-family: poppins; color: white;margin-left:40px;">
                    Upload
                    building image*
                  </h4>
                  <input type="file" class="form-control" style="width: 600px; margin-left: 30px;" id="buildimage"
                    name="buildimage" autocomplete="off" />
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <h4 class="card-title mt-3 px-2" style="font-family: poppins; color: white;margin-left:140px;">
                    Location
                    URL*
                  </h4>
                  <div class="form-group">
                    <center><textarea class="form-control" id="exampleFormControlTextarea1" rows="2"
                        style="font-size:25px; width:750px; margin-left:130px" autocomplete="off"
                        name="location"></textarea></center>
                    <br>
                  </div>
                </div>
                <div class="col">
                  <center><button type="submit" class="btn mb-4 " style="color:white; width:385px; margin-top:70px;"
                      data-mdb-toggle="modal" data-mdb-target="#myModal">
                      ADD
                    </button></center>
                </div>
              </div>
            </div>
            <br><br>

          </div>
        </div>
      </div>
  </form>
